<UserControl x:Class="RPGHelper.Client.Views.ItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGHelper.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/RPGHelper.Client;component/Media/nsamor.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Name" Grid.Row="0" Grid.Column="0" Style="{StaticResource ColorText}" />
        <Label Content="Price" Grid.Row="0" Grid.Column="1" Style="{StaticResource ColorText}"/>
        <Label Content="Type" Grid.Row="0" Grid.Column="2" Style="{StaticResource ColorText}"/>
        <Label Content="Actions" Grid.Row="0" Grid.Column="3" Style="{StaticResource ColorText}"/>
        
        


        <Button Style="{StaticResource MyButtonStyle}" Grid.Row="2" x:Name="Details" Width="30" Height="30" Click="DetailsShow_Click" BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="/RPGHelper.Client;component/Media/info.png"/>
            </Button.Background>
        </Button>
        

    </Grid>
</UserControl>
