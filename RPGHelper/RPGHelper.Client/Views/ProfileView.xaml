<UserControl x:Class="RPGHelper.Client.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGHelper.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="405" d:DesignWidth="640">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="130*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <VisualBrush x:Key="HintText" Stretch="None" AlignmentX="Center" AlignmentY="Center" >
                <VisualBrush.Transform>
                    <TranslateTransform X="0" Y="0" />
                </VisualBrush.Transform>
                <VisualBrush.Visual>
                    <Grid HorizontalAlignment="Center">
                        <TextBlock  FontSize="10"   FontWeight="Normal"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic" Opacity="1" Text="Enter Filter word"/>
                    </Grid>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Resources>
        <Border BorderThickness="5"
        BorderBrush="#AA9300"
                Margin="33,10,33,8" Grid.Row="0" Grid.Column="0">
            <Image Name="ProfilePic"
           Stretch="Fill"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           Source="{Binding User.ImageSource}"/>
        </Border>
        <Label Grid.Column="0" Grid.Row="1"
               HorizontalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Top"
               FontSize="25" Height="43" Margin="68,0" Width="120"
               Content="{Binding User.Username}"
               ></Label>

        <Label Grid.Column="0" Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               FontSize="18" Margin="70,0"
               >User details:
        </Label>
        <Grid Grid.Column="0" Grid.Row="2" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" FontSize="15" Margin="5,0,0,0">
                <Run Text="First name:" FontWeight="DemiBold"/>
                <Run Name="firstNameRun" Text="{Binding User.FirstName}"/>
            </TextBlock>

            <TextBlock Grid.Row="2" FontSize="15" Margin="5,0,0,0">
                <Run Text="Last name:" FontWeight="DemiBold"/>
                <Run Name="lastNameRun" Text="{Binding User.LastName}"/>
            </TextBlock>
            <TextBlock Grid.Row="3" FontSize="15" Margin="5,0,0,0">
                <Run Text="Email:" FontWeight="DemiBold"/>
                <Run Name="emailRun" Text="{Binding User.Email}"/>
            </TextBlock>
            <TextBlock Name="genderDetails" Grid.Row="4" FontSize="15" Margin="5,0,0,0">
                <Run Text="Gender:" FontWeight="DemiBold"/>
                <Run Name="genderRun" Text="{Binding User.Gender}"/>
            </TextBlock>
            <TextBlock Grid.Row="5" FontSize="15" Margin="5,0,0,0">
                <Run Text="Birthday:" FontWeight="DemiBold"/>
                <Run Name="bdayRun" Text="{Binding User.Birthdate, StringFormat=dd-MM-yyyy}"/>
            </TextBlock>
        </Grid>
        <DockPanel Grid.Column="1" Grid.RowSpan="3">
            <TabControl TabStripPlacement="Top" HorizontalAlignment="Stretch"  Margin="10,10,0,0" VerticalAlignment="Stretch">
                <TabItem Header="Friends" Name="FriendsTab">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Your Friends</Label>
                        <Separator VerticalAlignment="Bottom" Foreground="Black"/>
                        <ListView Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" Name="lvFriends">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="100" Header="Username">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Username}" FontWeight="DemiBold"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100" Header="Fullname" DisplayMemberBinding="{Binding Fullname}" />
                                    <GridViewColumn Width="90" Header="Gender" DisplayMemberBinding="{Binding Gender}"/>
                                    <GridViewColumn Width="50" Header="Remove">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="RemoveFriendButton_Click">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Image MaxHeight="16" MaxWidth="16">
                                                                <Image.Style>
                                                                    <Style TargetType="{x:Type Image}">
                                                                        <Setter Property="Source" Value="/RPGHelper.Client;component/Media/removeFriendIconSmall.png"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Source" Value="/RPGHelper.Client;component/Media/removeFriendIconSmallHover.png"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="2*"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" Grid.Row="0" Content="Search and Add new friends" HorizontalContentAlignment="Center"/>
                            <Separator Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom"/>
                            <Grid Grid.Column="1" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5*"/>
                                    <RowDefinition Height="7*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" FontSize="12" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center">Username:</Label>
                                <Separator Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" Margin="5,0,5,0"/>
                                <TextBox Name="searchBox" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="18" KeyDown="SearchBox_KeyDown" PreviewKeyDown="IgnoreSpace_PreviewKeyDown"/>
                                <Button Name="searchButton" Grid.Column="1" Grid.Row="1" Content="Search" Margin="5" Click="SearchButton_Click"/>
                                <Button Name="addFriendButton" Grid.Column="2" Grid.Row="1" Content="Add" IsEnabled="False" Margin="5" Click="AddFriendButton_Click" />
                            </Grid>
                            <StatusBar Grid.Column="1" Grid.Row="2" Margin="3">
                                <StatusBarItem HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                    <TextBlock Name="searchStatusText"/>
                                </StatusBarItem>
                            </StatusBar>

                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Name="InboxTab" Header="Inbox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="8*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="10*"/>
                        </Grid.ColumnDefinitions>
                        <ListView Margin="5" Name="InboxListView" Grid.Column="0" Grid.ColumnSpan="2">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Subject" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Subject}" FontStyle="Italic" MouseLeftButtonDown="MsgSubject_DoubleClick">
                                                    <TextBlock.Style>
                                                        <Style TargetType="{x:Type TextBlock}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                                    <Setter Property="FontWeight" Value="Light"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="From" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Sender.Username}" FontWeight="DemiBold" MouseLeftButtonDown="MsgSubject_DoubleClick"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Date" Width="70">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SentOn, StringFormat=dd-MM-yyyy}" FontWeight="Light"  MouseLeftButtonDown="MsgSubject_DoubleClick"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="30">
                                        <GridViewColumn.Header>
                                            <Image Source="/RPGHelper.Client;component/Media/star-half-empty.png" MaxHeight="16" MaxWidth="16"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image MaxWidth="16" MaxHeight="16">
                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                                    <Setter Property="Source" Value="/RPGHelper.Client;component/Media/envelope.png"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                                    <Setter Property="Source" Value="/RPGHelper.Client;component/Media/message.png"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="30">
                                        <GridViewColumn.Header>
                                            <Image Source="/RPGHelper.Client;component/Media/power.png" MaxHeight="16" MaxWidth="16"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="DeleteMsgFromInboxList">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Image MaxHeight="16" MaxWidth="16">
                                                                <Image.Style>
                                                                    <Style TargetType="{x:Type Image}">
                                                                        <Setter Property="Source" Value="/RPGHelper.Client;component/Media/rubbish-bin.png"/>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Source" Value="/RPGHelper.Client;component/Media/rubbish-bin-hover.png"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Image.Style>
                                                            </Image>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Label Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" Padding="5,0,0,0" FontSize="13" FontWeight="DemiBold">From:</Label>
                        <TextBlock Name="InboxfromTextBlock"  Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  Padding="42,0,0,0" FontStyle="Italic" FontSize="13"/>
                        <Label Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Padding="5,0,0,0" FontSize="13" FontWeight="DemiBold">On:</Label>
                        <TextBlock Name="InboxOnTextBlock"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  Padding="27,0,0,0" FontStyle="Italic" FontSize="13"/>
                        <Separator Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="5,0,5,0"/>
                        <TextBlock Name="InboxContentBox" Margin="5" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="WhiteSmoke" TextWrapping="Wrap"/>
                        <Button Name="InboxDeleteCurrentMsgBtn" Grid.Column="1" Grid.Row="3" Content="Delete" Margin="5" Click="InboxDeleteCurrentMsgBtn_Click"/>
                    </Grid>
                </TabItem>
                <TabItem Name="OutboxTab" Header="Outbox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="8*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="10*"/>
                        </Grid.ColumnDefinitions>
                        <ListView Margin="5" Name="OutboxListView" Grid.Column="0" Grid.ColumnSpan="2">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Subject" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Subject}" FontStyle="Italic" MouseLeftButtonDown="MsgSubjectOutbox_DoubleClick">
                                                    <TextBlock.Style>
                                                        <Style TargetType="{x:Type TextBlock}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                                    <Setter Property="FontWeight" Value="Light"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="To" Width="90">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Recipient.Username}" FontWeight="DemiBold" MouseLeftButtonDown="MsgSubjectOutbox_DoubleClick"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Date" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SentOn, StringFormat=dd-MM-yyyy}" FontWeight="Light"  MouseLeftButtonDown="MsgSubjectOutbox_DoubleClick"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="30">
                                        <GridViewColumn.Header>
                                            <Image Source="/RPGHelper.Client;component/Media/star-half-empty.png" MaxHeight="16" MaxWidth="16"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image MaxWidth="16" MaxHeight="16">
                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="False">
                                                                    <Setter Property="Source" Value="/RPGHelper.Client;component/Media/sent.png"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                                    <Setter Property="Source" Value="/RPGHelper.Client;component/Media/seen.png"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Label Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" Padding="5,0,0,0" FontSize="13" FontWeight="DemiBold">To:</Label>
                        <TextBlock Name="OutboxfromTextBlock"  Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  Padding="25,0,0,0" FontStyle="Italic" FontSize="13"/>
                        <Label Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Padding="5,0,0,0" FontSize="13" FontWeight="DemiBold">On:</Label>
                        <TextBlock Name="OutboxOnTextBlock"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  Padding="27,0,0,0" FontStyle="Italic" FontSize="13"/>
                        <Separator Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="5,0,5,0"/>
                        <TextBlock Name="OutboxContentBox" Margin="5" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="WhiteSmoke" TextWrapping="Wrap"/>
                    </Grid>
                </TabItem>
                <TabItem Name="SendMessageTab" Header="Send">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="40*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Margin="7,0,0,0" HorizontalAlignment="Left" FontSize="15" FontWeight="DemiBold" VerticalAlignment="Center">To:</Label>
                        <ComboBox Name="friendsCombobox" Grid.Column="0" Grid.Row="0" Margin="35,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBox Name="nameFilter" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Top" Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PreviewKeyDown="IgnoreSpace_PreviewKeyDown" KeyDown="NameFilter_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="{x:Type TextBox}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=nameFilter,Path=Text}" Value="" >
                                            <Setter Property="Background" Value="{StaticResource HintText}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Name="applyFilterBtn" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Apply" Click="ApplyFilterBtn_Click"/>
                        <Button Name="removeFilterBtn" Grid.Column="2" Grid.Row="0" VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Remove" Click="RemoveFilterBtn_Click"/>
                        <Grid Grid.Column="0" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18*"/>
                                <ColumnDefinition Width="44*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Margin="7,0,0,0" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Content="Subject:" FontWeight="DemiBold" FontSize="15"/>
                            <TextBox Name="msgSubjectBox" Grid.Column="1" Grid.Row="0" Margin="0,0,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="13" FontWeight="Normal" FontStyle="Italic" PreviewKeyDown="MsgSubjectBox_PreviewKeyDown"/>
                        </Grid>
                        <Button Name="clearMsg" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" Margin="5" Content="Clear" Click="ClearMsg_Click"/>
                        <Button Name="sendMsg" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="1" Margin="5" Content="Send" Click="SendMsg_Click"/>
                        <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" HorizontalContentAlignment="Left" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Content="Content:"  FontWeight="DemiBold" FontSize="15"/>
                        <TextBox Name="msgContentBox" Grid.Column="0" Margin="5" Grid.Row="3" Grid.ColumnSpan="3" BorderThickness="2" FontSize="13" FontWeight="Light" TextWrapping="Wrap" PreviewKeyDown="MsgContentBox_PreviewKeyDown"/>
                        <StatusBar Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Margin="10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" VerticalContentAlignment="Center">
                            <StatusBarItem HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center">
                                <TextBlock Name="outboxStatus"/>
                            </StatusBarItem>
                        </StatusBar>
                    </Grid>
                </TabItem>
                <TabItem Name="ChangeAvatarTab" Header="Change avatar">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="Black"  Margin="0,10,0,10" Grid.Column="1" BorderThickness="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Image Name="avatarPic"
                                       Stretch="Fill"
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                        <Button Content="Open" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top"  Height="30" Click="OpenBtn_Click"/>
                        <Button Content="Change" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,115,10,0" VerticalAlignment="Top" Height="30" Click="Change_Click"/>
                        <RadioButton Name="rdoBtnOwn" IsChecked="True" Content="Your own" GroupName="avatarSource" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,63,10,0" VerticalAlignment="Top"/>
                        <RadioButton Name="rdoBtnStock" Content="Use stock" GroupName="avatarSource" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,83,10,0" VerticalAlignment="Top"/>

                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="60" Grid.Row="0" VerticalAlignment="Top" Width="64">
                                <Image Source="/RPGHelper.Client;component/Media/ProfilePictures/stock1.jpg" Stretch="Fill" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="60" Grid.Row="1" VerticalAlignment="Top" Width="64">
                                <Image Source="/RPGHelper.Client;component/Media/ProfilePictures/stock5.jpg" Stretch="Fill" />
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="60" Grid.Row="2" VerticalAlignment="Top" Width="64">
                                <Image Source="/RPGHelper.Client;component/Media/ProfilePictures/stock9.PNG" Stretch="Fill" />
                            </Border>
                            <RadioButton Name="stock1"  IsChecked="True" GroupName="stockAvatars" HorizontalAlignment="Left" Margin="69,23,0,0" Grid.Row="0" VerticalAlignment="Top"/>
                            <RadioButton Name="stock5" GroupName="stockAvatars" HorizontalAlignment="Left" Margin="69,23,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                            <RadioButton Name="stock9" GroupName="stockAvatars" HorizontalAlignment="Left" Margin="69,23,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="60" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" Width="64">
                                <Image Source="/RPGHelper.Client;component/Media/ProfilePictures/stock2.jpg" Stretch="Fill" />
                            </Border>
